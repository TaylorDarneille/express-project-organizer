<h1>Edit Project</h1>


<form action="/projects/<%= project.id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" value="<%=project.name%>">
    </div>
  
    <div class="form-group">
      <label for="githubLink">Github Link</label>
      <input type="text" class="form-control" id="githubLink" name="githubLink" value=<%=project.githubLink%>>
    </div>
  
    <div class="form-group">
      <label for="deployedLink">Deploy Link</label>
      <input type="text" class="form-control" id="deployLink" name="deployLink" value=<%=project.deployLink%>>
    </div>
  
    <div class="form-group">
      <label for="description">Description</label>
      <textarea type="text" class="form-control" id="description" name="description"><%=project.description%></textarea>
    </div>

    <% let categoryString = ''%>
    <% categories.forEach(category => { %>
      <% categoryString = categoryString+category.dataValues.name+', '%>
    <% }) %>
  
    <div class="form-group">
      <label for="category">Category</label>
      <textarea type="text" class="category" id="category" name="category"><%=categoryString%></textarea>
    </div>
  
    <input type="submit" class="btn btn-primary">
  </form>