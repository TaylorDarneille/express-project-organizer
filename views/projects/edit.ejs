<h1>Edit <%= project.name %></h1>

<form action="/projects/<%= project.id %>/?_method=PUT" method="POST">
<input type="hidden" name="id" value="<%=project.id%>">
<fieldset>
  <legend>Edit Project</legend>
  <div class="row">
    <div class="col-sm-12">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" value="<%=project.name%>" required>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <label for="githubLink">Github Link</label>
      <input type="text" class="form-control" id="githubLink" name="githubLink" value="<%=project.githubLink%>" required>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
  <label for="deployedLink">Deployed Link</label>
  <input type="text" class="form-control" id="deployedLink" name="deployedLink" value="<%=project.deployedLink%>" required>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
  <label for="description">Description</label>
  <textarea type="text" class="form-control" id="description" name="description" required><%=project.description%></textarea>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <label for="category">Category</label>
      <input type="text" class="form-control" id="category" name="category" value="
        <% if(project.categories) { %>
          <% const nameArr = [] %>
            <% project.categories.forEach(category => { %>
              <% nameArr.push(category.name) %>
            <% }) %>
          <%= nameArr.toString() %>
        <% } %>
      " required>
    </div>
  </div>

  <input type="submit" class="button primary">
</fieldset>
</form>