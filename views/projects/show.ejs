<h1><%= project.name %></h1>

<section class="description">
  <a class="btn btn-primary description__button" href="<%= project.githubLink %>" target="_blank">
    <i class="fa fa-github" aria-hidden="true"></i>
  Github Link
  </a>

  <a class="btn btn-primary description__button" href="<%= project.deployLink %>" target="_blank">
    <i class="fa fa-globe" aria-hidden="true"></i>
  Deployed Link
  </a>

  <p class="description__summary"><%= project.description %></p>

  <p class="description__categories">Categories</p>
  <ul>
  <% project.categories.forEach(category => {%>
    <li class="description__category"><%=category.name%></li>
  <%})%>
  </ul>
  <hr />
</section>

<section class = "widget">
  <form class="widget__form" action="/projects/<%=project.id%>" method="POST">

    <div class="form-group">
      <label for="category" class="widget__input widget__input--label">Add a Category</label>
      <textarea type="text" class="widget__input widget__input--text" id="category" name="category" required></textarea>
    </div>

    <input type="submit" class="widget__input widget__input--submit" value="Add Category">
    </form>
</section>

<form method="POST" action="/projects/<%=project.id%>/?_method=DELETE">
  <input type="submit" value="Delete Project">
</form>

<a class="navArrow" href="/">&larr; Back Home</a>
